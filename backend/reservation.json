{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Reservation",
  "type": "object",
  "required": [
    "guest_name",
    "address",
    "country",
    "legal_id",
    "email",
    "phone",
    "resort_name",
    "checkin_date",
    "checkout_date",
    "guests",
    "payment_status"
  ],
  "properties": {
    "id": { "type": "integer", "minimum": 1 },
    "guest_name": { "type": "string", "minLength": 1 },
    "address": { "type": "string", "minLength": 1 },
    "country": { "type": "string", "minLength": 1 },
    "legal_id": { "type": "string", "minLength": 1 },
    "email": { "type": "string", "format": "email" },
    "phone": { "type": "string", "pattern": "^\\+?[0-9]{7,15}$" },
    "resort_name": { "type": "string", "enum": ["Arcadia Beach Resort", "Kuya Boy Beach Resort"] },
    "checkin_date": { "type": "string", "format": "date" },
    "checkout_date": { "type": "string", "format": "date" },
    "guests": { "type": "integer", "minimum": 1 },
    "payment_status": { "type": "string", "enum": ["pending", "paid", "failed", "refunded"] },
    "notes": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" }
  },
  "additionalProperties": false
}
