{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Reservation",
  "type": "object",
  "required": [
    "resort_id",
    "guest_name",
    "address",       
    "country",       
    "legal_id",      
    "checkin_date",
    "checkout_date",
    "guests",
    "contact"
  ],
  "properties": {
    "id": { "type": "integer", "minimum": 1 },
    "resort_id": { "type": "integer", "minimum": 1 },
    "guest_name": { "type": "string", "minLength": 1 },
    "address": { "type": "string", "minLength": 1 },       
    "country": { "type": "string", "minLength": 1 },       
    "legal_id": { "type": "string", "minLength": 1 },      
    "contact": {
      "type": "object",
      "required": ["phone"],
      "properties": {
        "phone": { "type": "string", "minLength": 7 },
        "email": { "type": "string", "format": "email" }
      },
      "additionalProperties": false
    },
    "checkin_date": { "type": "string", "format": "date" },
    "checkout_date": { "type": "string", "format": "date" },
    "guests": { "type": "integer", "minimum": 1 },
    "room_type": { "type": "string" },
    "payment_status": { "type": "string", "enum": ["pending","paid","failed","refunded"] },
    "notes": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" }
  },
  "additionalProperties": false
}